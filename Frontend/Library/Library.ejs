<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LibManage - Library</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script
      src="https://kit.fontawesome.com/1b2855684f.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="flex justify-between p-6 items-center sticky top-0 bg-white shadow-sm z-50">
      <div>
        <h1 class="text-2xl font-bold">LibManage</h1>
      </div>
      <div class="flex gap-6 items-center">
        <a href="/render/home">
          <button class="font-semibold hover:text-gray-600 transition-colors">Home</button>
        </a>
        <a href="/render/library">
          <button class="font-semibold hover:text-gray-600 transition-colors">Library</button>
        </a>
        <% if (locals.token) { %>
          <form action="/auth/logout" method="POST" class="m-0">
            <button type="submit" class="px-6 py-3 bg-black hover:bg-gray-800 font-semibold text-white rounded-xl transition-colors">
              Logout
            </button>
          </form>
        <% } %>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="p-6">
      <div class="bg-white rounded-2xl shadow-md p-6 mb-6">
        <h1 class="text-4xl font-bold">Welcome to Library</h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 max-h-[calc(100vh-16rem)] overflow-y-auto pb-6"
           style="scrollbar-width: none; -ms-overflow-style: none">
        <% books.forEach(function(book) { %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow p-4 flex flex-col">
          <div class="flex justify-between items-center mb-4">
            <span class="bg-black text-white px-4 py-2 rounded-full text-sm">
              <%= book.copiesAvailable %> available
            </span>
            <button class="bg-gray-100 p-3 rounded-xl hover:bg-gray-200 transition-colors">
              <i class="fa-solid fa-arrow-up-long rotate-45"></i>
            </button>
          </div>

          <h2 class="text-2xl font-bold mb-2 truncate"><%= book.title %></h2>
          <p class="text-gray-600 text-sm line-clamp-2 mb-4 flex-grow">
            <%= book.description %>
          </p>

          <div class="flex flex-wrap gap-2 mb-4">
            <% book.genre.forEach(function(genre) { %>
            <span class="bg-gray-800 text-white text-xs px-3 py-1 rounded-full">
              <%= genre %>
            </span>
            <% }); %>
          </div>

          <p class="text-sm text-gray-500 mb-4">by <%= book.author %></p>
          <button 
            class="w-full px-4 py-3 bg-black text-white font-semibold rounded-xl 
            hover:bg-gray-800 transition-colors flex items-center justify-center gap-2"
            onclick="console.log('clicked');
            fetch('/student/borrowbook', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              body: JSON.stringify({
                bookId: '<%= book._id %>'
              }),
              credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                alert('Book borrowed successfully!');
                location.reload();
              } else {
                alert(data.message || 'Error borrowing book');
              }
            })
            .catch(error => {
              console.error('Error:', error.message);
              alert('Error borrowing book',error.message);
            })"
          >
            <i class="fa-solid fa-book-bookmark"></i>
            Borrow
          </button>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>