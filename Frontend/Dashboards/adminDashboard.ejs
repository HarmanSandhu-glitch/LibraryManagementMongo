<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script
      src="https://kit.fontawesome.com/1b2855684f.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-gray-100">
    <!-- Navigation -->
    <div class="flex justify-between p-4 items-center sticky top-0 bg-white z-50">
      <div>
        <h1 class="font-bold text-2xl">LibManage Admin</h1>
      </div>
      <div class="flex gap-4 items-center">
        <a href="/render/home">
          <button class="font-semibold cursor-pointer">Home</button>
        </a>
        <a href="/auth/logout">
          <button class="p-4 py-3 bg-black font-bold text-white rounded-2xl cursor-pointer">
            Logout
          </button>
        </a>
      </div>
    </div>

    <div class="p-6">
      <!-- Stats Overview -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-white p-6 rounded-xl shadow">
          <h3 class="text-gray-500 text-sm mb-2">Total Books</h3>
          <p class="text-3xl font-bold"><%= books ? books.length : 0 %></p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow">
          <h3 class="text-gray-500 text-sm mb-2">Total Students</h3>
          <p class="text-3xl font-bold"><%= students ? students.length : 0 %></p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow">
          <h3 class="text-gray-500 text-sm mb-2">Books Borrowed</h3>
          <p class="text-3xl font-bold">0</p>
        </div>
      </div>

      <!-- Books Management -->
      <div class="bg-white rounded-xl shadow mb-6">
        <div class="p-6 border-b">
          <div class="flex justify-between items-center">
            <h2 class="text-xl font-bold">Books Management</h2>
            <a href="/render/addBook">
              <button class="bg-black text-white px-4 py-2 rounded-lg">
                Add New Book
              </button>
            </a>
          </div>
        </div>
        <div class="p-6">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="text-left border-b">
                  <th class="pb-4">Title</th>
                  <th class="pb-4">Author</th>
                  <th class="pb-4">Copies Available</th>
                  <th class="pb-4">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (books && books.length > 0) { %>
                  <% books.forEach(function(book) { %>
                  <tr class="border-b">
                    <td class="py-4"><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.copiesAvailable %></td>
                    <td class="flex gap-2">
                      <button onclick="editBook('<%= book._id %>')" class="text-blue-600 hover:text-blue-800">Edit</button>
                      <button onclick="deleteBook('<%= book._id %>')" class="text-red-600 hover:text-red-800">Delete</button>
                    </td>
                  </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="py-4 text-center">No books found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Students Management -->
      <div class="bg-white rounded-xl shadow">
        <div class="p-6 border-b">
          <h2 class="text-xl font-bold">Students Management</h2>
        </div>
        <div class="p-6">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="text-left border-b">
                  <th class="pb-4">Name</th>
                  <th class="pb-4">Email</th>
                  <th class="pb-4">Books Borrowed</th>
                  <th class="pb-4">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% try { %>
                  <% if (students && students.length > 0) { %>
                    <% students.forEach(function(student) { %>
                    <tr class="border-b">
                      <td class="py-4"><%= student.name %></td>
                      <td><%= student.email %></td>
                      <td><%= student.borrowedBooks ? student.borrowedBooks.length : 0 %></td>
                      <td class="flex gap-2">
                        <button onclick="viewStudent('<%= student._id %>')" class="text-blue-600 hover:text-blue-800">View Details</button>
                        <button onclick="removeStudent('<%= student._id %>')" class="text-red-600 hover:text-red-800">Remove</button>
                      </td>
                    </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="4" class="py-4 text-center">No students found</td>
                    </tr>
                  <% } %>
                <% } catch (error) { %>
                  <tr>
                    <td colspan="4" class="py-4 text-center text-red-500">Error loading students data</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

